{
  "ConnectionStrings": {
      "InfluxDBContext" : #{INFLUXDB_TOKEN}
  },

  "Rabbit" :
  {
    "Scale": 4,

    "ClientDeclarations": 
    {
      "Connections":
      [
        {
          "Name":"CpuConnection",
          "ClientName": "CpuMonitor",
          "ServerName": "10.0.0.215",
            "UserName": "general",
            "Password": "#{RABBIT_PASSWORD}"
        },
        {
          "Name":"MetricConnection",
          "ClientName": "CpuMonitor",
          "ServerName": "10.0.0.215",
            "UserName": "general",
            "Password": "#{RABBIT_PASSWORD}"
        }
      ],
      "AsyncRecievers":
      [
        {
          "Name": "IncomingMessages",
          "Connection": "CpuConnection",
          "Queue": "cpu_usage"
        }
      ],
      "Publishers":
      [
        {
          "Name": "MetricMessage",
          "Connection": "MetricConnection",
          "Exchange": "InterTopic"
        }
      ]
    },
    "ServerDeclarations":
    {
      "Exchanges":
      [
        {
          "Name": "InterTopic",
          "Type": "Topic",
          "AutoDelete": "False",
          "Durable": "True",
          "Connection": "CpuConnection"
        }
      ],
      "Bindings":
      [
        {
          "Queue": "cpu_usage",
          "Connection": "CpuConnection",
          "Exchange": "InterTopic",
          "SubscriptionKey": "node.usage"
        }
      ],
      "Queues":
      [
        {
          "Name": "cpu_usage",
          "Connection": "CpuConnection",
          "AutoDelete": "False",
          "Durable": "False",
          "Exclusive": "False"
        }
      ]
    } 
  }
}