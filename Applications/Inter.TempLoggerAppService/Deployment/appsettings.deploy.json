{
  "ConnectionStrings" : {
     "TemperatureContext" :  #{MYSQL_CONNECTION_STRING}
  },
  "Rabbit" :
  {
    "ClientDeclarations": 
    {
      "Connections":
      [
        {
          "Name":"TemperatureConnection",
          "ClientName": "TemperatureListener",
          "ServerName": "rabbit.centurionx.net",
          "UserName": "tempysecure",
          "Password": #{TEMPYSECURE_PASSWORD}
        }
      ],
      "AsyncRecievers":
      [
        {
          "Name": "IncomingMessages",
          "Connection": "TemperatureConnection",
          "Queue": "Temperature"
        }
      ]
    },
    "ServerDeclarations":
    {
      "Exchanges":
      [
        {
          "Name": "InterTopic",
          "Type": "Topic",
          "AutoDelete": "False",
          "Durable": "True",
          "Connection": "TemperatureConnection"
        }
      ],
      "Bindings":
      [
        {
          "Queue": "Temperature",
          "Connection": "TemperatureConnection",
          "Exchange": "InterTopic",
          "SubscriptionKey": "temperature.*"
        }
      ],
      "Queues":
      [
        {
          "Name": "Temperature",
          "Connection": "TemperatureConnection",
          "AutoDelete": "False",
          "Durable": "False",
          "Exclusive": "False"
        }
      ]
    } 
  }
}
